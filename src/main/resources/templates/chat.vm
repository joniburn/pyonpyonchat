<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PYON PYON Chat</title>

  <!-- Bootstrap -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <script src="js/jquery.min.js" defer></script>
  <script src="js/bootstrap.min.js" defer></script>
  <script src="js/chat.js" defer></script>
</head>
<body>

  <div class="container">
  <div class="row">

  <h2>PYON PYON Chat</h2>

  <form onsubmit="pyonpyonchat.submit(this); return false;">

  <div class="col-xs-12">
  <div class="form-inline">
    <div class="form-group">
      <label for="name">お名前</label>
      <input id="name" name="name" class="form-control" type="text"
              placeholder="名前を入力" value="$!{name}">
    </div>
  </div>
  <hr>
  </div>

  <!-- chat入力部 -->
  <div class="col-xs-12 col-sm-4">
    <div class="input-group">
      <input id="chatText" name="chatText" class="form-control" type="text" placeholder="Chat">
      <span class="input-group-btn">
        <input type="submit" id="submitButton" class="btn btn-primary">送信</button>
      </span>
    </div>
  </div> <!-- chat入力部 -->

  <!-- chat表示部 -->
  <div id="chatContainer" class="col-xs-12 col-sm-8">
  </div>

  </form>

  </div> <!-- .row -->
  </div> <!-- .container -->
</body>
</html>
